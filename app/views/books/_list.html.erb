<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>


<h2>User info</h2>

<%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>

<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<%= link_to "edit", edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog'  %>


<h1>New Book</h1>
<%= form_with model: book, local:true do |f| %>
<h2>Title</h2>
<%= f.text_field :title %>
<h2>Opnion</h2>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>