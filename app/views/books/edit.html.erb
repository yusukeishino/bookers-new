<!--エラーメッセージ-->
<% if @book.errors.any? %>
 <div id="error_explanation">
   <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
   <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
   </ul>
 </div>
<% end %>

<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   
   <h2>Editing Book</h2>
     <%= form_with model:@book, local:true do |f| %>
     <div class="edit">
      <label for="inputTitle">Title</label>
      <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"title" %>
     </div>
     <div class="edit">
      <label for="inputOpinion">Opinion</label>
      <%= f.text_area :body, autofocus: true, id:"inputOpinion", placeholder: "opinion" %>
     </div>
     <div class="edit">
     <%= f.submit "Update Book" %>
     </div>
     <% end %>

<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path %>

</div>
</div>
</div>